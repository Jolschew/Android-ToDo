<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Todo" />

    <TextView
        android:id="@+id/expirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingLeft="5dp"
        android:textColor="@color/colorPrimarySuperDark"
        android:text="19.05.1982"
        android:layout_alignBaseline="@+id/cbIsFinished"
        android:layout_alignBottom="@+id/cbIsFinished"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--<TextView
        android:id="@+id/isFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingLeft="255dp"
        android:textColor="@color/colorPrimarySuperDark"
        android:text="1"
       android:layout_below="@+id/name" />
-->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorit"
        android:id="@+id/cbIsFavourite"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignTop="@+id/cbIsFinished"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erledigt"
        android:id="@+id/cbIsFinished"
        android:checked="false"
        android:layout_below="@+id/name"
        android:layout_toLeftOf="@+id/cbIsFavourite"
        android:layout_toStartOf="@+id/cbIsFavourite"
        android:textColor="@color/colorPrimaryDark" />

</RelativeLayout>