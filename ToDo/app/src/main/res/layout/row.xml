<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Todo" />

    <TextView
        android:id="@+id/expirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingLeft="5dp"
        android:textColor="@color/colorPrimarySuperDark"
        android:text="19.05.1982"
        android:layout_alignBaseline="@+id/cbIsFinished"
        android:layout_alignBottom="@+id/cbIsFinished"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--<TextView
        android:id="@+id/isFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingLeft="255dp"
        android:textColor="@color/colorPrimarySuperDark"
        android:text="1"
       android:layout_below="@+id/name" />
-->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorit"
        android:id="@+id/cbIsFavourite"
        android:layout_below="@+id/bDetail"
        android:layout_alignRight="@+id/bDetail"
        android:layout_alignEnd="@+id/bDetail"
        android:textColor="@color/colorPrimaryDark" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erledigt"
        android:id="@+id/cbIsFinished"
        android:checked="false"
        android:layout_below="@+id/bDetail"
        android:layout_toLeftOf="@+id/cbIsFavourite"
        android:layout_toStartOf="@+id/cbIsFavourite"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:id="@+id/bDetail"
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/name"
        android:padding="3dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF" />

</RelativeLayout>